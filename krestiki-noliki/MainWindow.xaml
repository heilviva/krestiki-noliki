<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Крестики-нолики" Height="450" Width="450">
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="turnLabel" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10"/>
        <Button x:Name="newGameButton" Grid.Row="1" Content="Новая игра" HorizontalAlignment="Right" Margin="0,10" Click="NewGameButton_Click"/>
    </Grid>
</Window>
